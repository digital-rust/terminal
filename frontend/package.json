{
  "name": "terminal",
  "version": "0.0.6-a",
  "description": "the serial terminal that does not suck",
  "main": "./build/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./build/main.js",
    "dist": "./node_modules/.bin/electron-builder build -m -l -w"
  },
  "build": {
    "appId": "yourappid",
    "extends": null,
    "files": [
      "*.js",
      "build",
      "node_modules"
    ],
    "directories": {
      "buildResources": "",
      "app": ""
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "electron": "^18.2.0",
    "electron-builder": "^23.0.3",
    "eslint": "^8.14.0",
    "typescript": "^4.6.3"
  },
  "repository": "https://github.com/makaveevognyan/terminal",
  "keywords": [
    "serial",
    "terminal"
  ],
  "author": "",
  "license": "",
  "dependencies": {
    "electron-builder-squirrel-windows": "^23.0.8",
    "portastic": "^1.0.1",
    "portfinder": "^1.0.28"
  }
}
